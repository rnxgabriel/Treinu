    "paths": {
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@domain": ["./src/domain"],
      "@form": ["./src/form"],
      "@hooks": ["./src/hooks"],
      "@routes": ["./src/routes"],
